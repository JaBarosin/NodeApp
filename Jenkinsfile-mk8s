def nodeapp = "jenkins-mk8s-${UUID.randomUUID().toString()}"

podTemplate(label: nodeapp, yaml: readTrusted('pod.yaml'), containers: [
  containerTemplate(name: 'nodeapp-test', image: 'jbarosin/nodeapp:dev', command: 'cat', ttyEnabled: true)
]){
  node(nodeapp) {
    stage ('Test nodeapp mk8s') {
        container('nodeapp-test') {
          sh "echo hello from $POD_CONTAINER"
        }
      }
  }
}
